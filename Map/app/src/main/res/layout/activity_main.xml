<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/bckgr"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fusion.map.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="@drawable/logo"
            android:layout_marginTop="-4dp"
            android:layout_marginLeft="85dp"
            />


        <TextView
            android:text="Life Safe"
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-40dp"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />


    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#00a5d6"
        android:layout_marginLeft="42dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="Log in"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp" />

    <TextView
        android:text="Don't have any account? Sign up"
        android:layout_width="match_parent"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_marginLeft="42dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/login"
        android:layout_marginStart="14dp" />

    <EditText
        android:id="@+id/nameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="   Phone number :"
        android:drawableLeft="@drawable/dialer_24dp"
        android:textColorLink="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_above="@+id/passwordLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="   Password"
        android:drawableLeft="@drawable/lock_24dp"
        android:textColorHint="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/login" />
</RelativeLayout>
